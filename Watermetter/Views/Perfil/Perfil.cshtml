@using Watermetter.Models;

@{
    var perfil = ViewBag.Perfil as Perfil;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">

<body>

<nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
          <a class="navbar-brand" asp-controller="Home" asp-action="Index">Watermetter</a>
          <div class="position-relative">...
            
          <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
          <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
            <div class="offcanvas-header">
              <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Watermetter</h5>
              <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller="Perfil" asp-action="Perfil">Perfil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller="Arduino" asp-action="Arduino">Arduinos</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" asp-controller="Home" asp-action="Sair">Sair</a>
                </li>
              </ul>

            </div>
          </div>
        </div>
        
      </nav>


      <div class="position-relative">
          
       <p class="fs-2">Meu perfil</p>
         
    </div>
      
<form class="row g-3">
  <div class="col-12">
    <label for="name" class="form-label">Nome</label>
            <input type="text" class="form-control" name="name" id="name" value="@perfil.Name">
  </div>
  <div class="col-12">
    <label for="lastname" class="form-label">Sobrenome</label>
            <input type="text" class="form-control" name="lastname" id="lastname" value="@perfil.LastName">
  </div>
  <div class="col-md-6">
    <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" name="email" id="email" value="@perfil.Email">
  </div>

  <div class="col-md-6">
    <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control" name="password" id="password" value="@perfil.Password" />
  </div>
        <div class="col-md-6">
            <label for="number" class="form-label">Telefone</label>
            <input type="number" class="form-control" name="number" id="number" value="@perfil.Cellphone" />
        </div>
  <div class="col-md-8">
    <button type="submit" class="btn btn-success" asp-controller="Perfil" asp-action="EditarPerfil" asp-route-name="name" asp-route-lastname="lastname" asp-route-email="email" asp-route-password="password" asp-route-number="number">Atualizar cadastro</button>
  </div>
</form>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>