head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
@{
    ViewData["Title"] = "Arduinos";
}

@{
    var arduinos = ViewData["Arduinos"] as List<Arduino>;
}

<style>

    .scroll {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        width: 180vh;
        height: 40vh;
        padding: 15px 2%;
        overflow-y: scroll;
        box-shadow: 0 0 5px solid rgba(0,0,0,0.3);
    }

    .footer {
        background-color: rgb(33, 37, 41);
    }

    #Cadastrar{
        top: 15vh;
    }
</style>
<nav class="navbar navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Watermetter</a>
        <div class="position-relative">
            ...
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
        <div class="offcanvas offcanvas-end text-bg-dark" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Watermetter</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Perfil" asp-action="Perfil">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Sair">Sair</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<form method="post">
    <button asp-action="ArduinoCreate" id="Cadastrar" class="btn btn-success col-md-10">Cadastrar novo arduíno</button>
</form>


<div class="scroll">
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">ID Arduino</th>
                <th scope="col">ID Usuário</th>
                <th scope="col">Nome</th>
                <th scope="col">Data de instalação</th>
            </tr>
        </thead>

        <tbody>
            @{
                var count = 0;
                foreach (var arduino in arduinos)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td>@arduino.IdArduino</td>
                        <td>@arduino.IdOwner</td>
                        <td>@arduino.Name</td>
                        <td>@arduino.ApplyDate</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>